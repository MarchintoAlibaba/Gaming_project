page{
  background: linear-gradient(#6500ff, #c01adf);
}
.top{
  position: relative;
}
.top_bg{
  width: 100%;
  height: 300rpx;
}
.info{
  position: absolute;
  top: 90rpx;
  width: 88%;
  left: 6%;
  display: flex;
  justify-content: start;
  align-items: center
}
.my_info_container{
  position: absolute;
  width: 86%;
  padding: 20rpx 3%;
  left: 4%;
  top: 0;
  background: #fff;
  color: #333;
  border-radius: 30rpx;
  box-shadow: 0 0 8rpx 8rpx rgba(0,0,0,0.1);
  margin-top: 30rpx;
}
.info_vip{
  display: flex;
  justify-content: space-between;
  align-items: center
}
.info_face{
  position: relative;
  margin-right: 20rpx;
}
.vip_icon{
  position: absolute;
  bottom: 0;
  left: 28rpx;
}
.face{
  width: 130rpx;
  height: 130rpx;
}
.vip_icon{
  width: 74rpx;
  height: 27rpx;
}
.vip_top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}
.vip_desc{
  width: 114rpx;
  height: 46rpx;
}

.vip_center{
  width: 380rpx;
  height: 30rpx;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  margin-top: 10rpx;
  border: 1rpx solid #333;
}
.vip_center>image{
  width: 100%;
  height: 100%;
}
.vip_base{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.vip_length{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2
}
.vip_num{
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  text-align: left;
  color: #7007dc;
  font-size: 22rpx;
  margin-top: 10rpx;
}
.vip_class{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}
.share{ 
  position: relative;
  margin-top: 20rpx;
}
.QR_code{
  width: 87rpx;
  height: 103rpx;
}
.QR_code_icon{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 12rpx;
  left: 20rpx;
}
.title{
  font-size: 40rpx;
  text-align: center;
  margin-top: 20rpx;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2rpx
}
.time{
  width: 40%;
  margin-left: 30%;
  height: 40rpx;
  line-height: 40rpx;
  background: #ea02f2;
  font-size: 22rpx;
  color: #fff;
  text-align: center;
  border-radius: 20rpx;
  margin-top: 20rpx;
}
.main{
  width: 84%;
  padding: 3%;
  background: #fff;
  margin-left: 5%;
  border-radius: 30rpx;
  margin-top: 20rpx
}
.main_container{
  border: 1rpx solid #ea02f2;
  border-radius: 30rpx;
  padding: 30rpx;
}
.item{
  display: flex;
  text-align: center;
}
.item>view{
  width: 50%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #7707e8
}
.item1_top{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #7707e8;
  text-align: center
}
.item1_top>view{
  width: 25%;
  height: 60rpx;
  line-height: 60rpx;
}
.item1_desc{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #7707e8;
  text-align: center
}
.item1_desc>view{
  width: 25%;
  height: 60rpx;
  line-height: 60rpx;
}