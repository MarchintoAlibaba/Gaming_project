<view class="top">
  <image class="top_bg" src="../../../static/my/bg_baishdi.png"></image>
  <view class="info">
    <view style=" display: flex;justify-content: space-between;align-items: center;">
      <view class="info_face">
        <image class="face" src="{{avatarUrl}}"></image>
        <image class="vip_icon" src="{{'../../../static/my/vip' + integral + '.png'}}"></image>
      </view>
      <view class="vip_container" style="margin-right:40rpx;">
        <view class="vip_top">
          <view class="name">{{nickName}}</view>
        </view>
        <view class="vip_center">
          <image class="vip_base" src="../../../static/my/ht_1.png"></image>
          <image class="vip_length" style='width:{{num}}%' src="../../../static/my/ht_2.png"></image>
        </view>
        <view class="vip_num">经验值：{{exp}}/{{sumexp}}</view>
      </view>
    </view>
    <view class="share" bindtap="to_OR_code">
      <image class="QR_code" src="../../../static/my/bg_fxzq.png"></image>
      <image class="QR_code_icon" src="../../../static/my/icon__0003_4.png"></image>
    </view>
  </view>
</view>
