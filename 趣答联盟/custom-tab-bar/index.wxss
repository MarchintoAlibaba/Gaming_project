/* tabBar总体 */
.tab-bar{
  width: 100%;
  height: 80px;
  display: flex;
  flex-direction: row;
}
/* 背景图片 */
.tab-bar-bg{
  display: flex;
  position: absolute;
  width: 100%;
  height: 68px;
  z-index: 2;
}
/* 背景一条线 */
.tab-bar-bg-view{
  width: 100%;
  height: 1px;
  background:  rgba(0, 0, 0, 0.33);
  position: absolute;
  top: 17px;
  z-index: -1;
}
/* tabBar内容快 */
.tab-bar-index{
  display: flex;
  flex: 1;
  font-size: 30rpx;
  height: 100%;
  margin-top: 20px;
  z-index: 5;
  background: #fff
}
/* tarBar添加发布单独内容快 */
.tab-bar-index-add{
  flex: 1;
  font-size: 30rpx;
  z-index: 1004;
  height: 100%;
  background: #fff;
  border-top-right-radius: 50%;
  border-top-left-radius: 50%;
}
/* 图标字体结合内容快 */
.tab-bar-icon{
  width: 100%;
  height: 45px;
  margin-top: 5px;
  display: flex;
  flex-direction: column;
}
/* 图标字体结合内容快添加发布单独设置 */
.tab-bar-icon_add{
  width: 100%;
  height: 200rpx;
  margin-top: 16rpx;
  border-top-right-radius: 50%;
  border-top-left-radius: 50%;
  padding-bottom: 30rpx
}
/* 内容快图片 */
.tab-bar-img{
  width: 33.333px;
  height: 25px;
  margin: 0 auto;
}
/* 内容快添加发布单独图片设置 */
.tab-bar-img-add{
  width: 55px;
  height: 55px;
  margin: 0 auto;
}
/* 内容快挤位置 */
.tab-bar-tmp{
  width: 100%;
  height: 3.5px;
}
/* 内容快文字 */
.tab-bar-text{
  width: 40px;
  text-align: center;
  font-size: 12px;
  margin: 0 auto;
}