.main{
  width: 90%;
  margin: 30rpx 5%;
  box-shadow: 0 0 8rpx 8rpx rgba(0,0,0,0.1);
  border-radius: 20rpx;
}
.zfb{
  padding: 30rpx;
  width: 88%;
  margin-left: 2%;
  border-bottom:  1rpx dashed #b5b5b5
}
.zfb_name_container{
  display: flex;
  justify-content: start;
  align-items: center;
}
.zfb_name{
  font-size: 26rpx;
  color: #333;
  margin-right: 10rpx;
  width: 150rpx;
  text-align: right
}
.name{
  background: #eeeeee;
  width: 350rpx;
  height: 40rpx;
  padding-left: 20rpx;
  font-size: 26rpx;
}
.placeholder{
  color: #878787;
  font-size: 22rpx;
}
.tips{
  font-size: 22rpx;
  color: #e82828;
  margin-left: 20rpx
}
.age{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
  width: 200rpx;
  height: 40rpx;
  border-radius: 5rpx;
  border: 1rpx solid #b5b5b5;
  font-size: 20rpx;
  color: #b5b5b5
}
.down{
  width: 30rpx;
  height: 15rpx;
}
.tips1{
  color: #999999;
  font-size: 22rpx;
  margin-left: 20rpx
}
.btn{
  width: 50%;
  height: 70rpx;
  position: relative;
  margin: 50rpx 25%;
  padding-bottom: 50rpx; 
}
.btn_bg{
  width: 100%;
  height: 100%;
}
.btn_zh{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
}
