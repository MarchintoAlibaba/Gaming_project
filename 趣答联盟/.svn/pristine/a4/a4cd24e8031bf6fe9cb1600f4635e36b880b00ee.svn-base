page{
  height: 90%
}
scroll-view{
  height: 100%;
  overflow: auto
}
.top{
  position: relative;
}
.top_bg{
  width: 100%;
  height: 300rpx;
}
.my_info_container{
  position: absolute;
  width: 86%;
  padding: 20rpx 3%;
  left: 4%;
  top: 0;
  background: #fff;
  color: #333;
  border-radius: 30rpx;
  box-shadow: 0 0 8rpx 8rpx rgba(0,0,0,0.1);
  margin-top: 30rpx;
}
.info_vip{
  display: flex;
  justify-content: space-between;
  align-items: center
}
.info_face{
  position: relative;
  margin-right: 20rpx;
}
.vip_icon{
  position: absolute;
  bottom: 0;
  left: 28rpx;
}
.face{
  width: 130rpx;
  height: 130rpx;
}
.vip_icon{
  width: 74rpx;
  height: 27rpx;
}
.vip_top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}
.vip_desc{
  width: 114rpx;
  height: 46rpx;
}

.vip_center{
  width: 380rpx;
  height: 30rpx;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  margin-top: 10rpx;
  border: 1rpx solid #333;
}
.vip_center>image{
  width: 100%;
  height: 100%;
}
.vip_base{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.vip_length{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2
}
.vip_num{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 5;
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  color: #fff;
  font-size: 18rpx;
}
.vip_class{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}
.share{ 
  position: relative;
  margin-top: 20rpx;
}
.QR_code{
  width: 87rpx;
  height: 103rpx;
}
.QR_code_icon{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 12rpx;
  left: 20rpx;
}
.to_cash_bg{
  width: 163rpx;
  height: 69rpx;
}
.info_money{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  margin-top: 30rpx;
  padding-bottom: 10rpx;
  color: #333;
}
.to_cash{
  position: relative;
  width: 163rpx;
  height: 69rpx;
}
.to_cash_zh{
  position: absolute;
  color: #fff;
  font-size: 28rpx;
  top: 0;
  left: 0;
  width: 100%;
  height: 69rpx;
  text-align: center;
  line-height: 69rpx;
  font-weight: bold
}
.my_money_container{
  margin-top: 60rpx;
  width: 86%;
  margin-left: 4%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 20rpx;
  padding: 20rpx 3%;
  box-shadow: 0 0 8rpx 8rpx rgba(0,0,0,0.1);
}
.my_money_container>view{
  width: 50%;
  text-align: center;
  font-size: 24rpx;
}
.gold_num{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: #f54124;
  margin-bottom: 10rpx
}
.gold{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.banner{
  width: 92%;
  margin-left: 4%;
  box-shadow: 0 0 8rpx 8rpx rgba(0,0,0,0.1);
  border-radius: 20rpx;
  margin-top: 20rpx;
}
.banner_img{
  width: 100%;
  vertical-align: middle;
}
.list{
  width: 86%;
  margin-left: 4%;
  margin-top: 25rpx;
  box-shadow: 0 0 8rpx 8rpx rgba(0,0,0,0.1);
  padding: 0 3%;
  border-radius: 20rpx;
}
.item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
}
.item_lsft{
  display: flex;
  justify-content: start;
  align-items: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}
.info_update{
  width: 45rpx;
  height: 45rpx;
  margin-right: 20rpx;
}
.go{
  width: 15rpx;
  height: 26rpx;
}